<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header>
      <a href="/newpost">nieuwe post maken</a>
    </header>

    <main>
      <h1>Blog overview</h1>
      <section class="overview">
        <% posts.forEach(post => { %>
        <article>
          <a href="/posts/<%= post._id %>">
            <div class="article-top">
              <img src="<%= post.image %>" alt="image of post" />
              <p><%= post.GastlesNR %></p>
            </div>

            <div class="article-bottom">
              <span class="<%= getClassForTag(post.Tags) %>"><%= post.Tags %></span>
              <span class="themes"><%= post.GastlesThema %></span>
              <h3><%= post.Gastnaam %></h3>
              <quote><%= post.Quote %></quote>
            </div>
          </a>
        </article>
        <% }); %>
      </section>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
    <script src="/js/index.js"></script>
  </body>
</html>
